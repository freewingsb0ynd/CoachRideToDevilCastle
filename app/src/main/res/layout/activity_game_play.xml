<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gamePlay"
    tools:context="com.example.hoangelato.coachridetodevilcastle.GamePlayActivity">
    
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/margin_horizontal_between_players"
        android:layout_marginEnd="@dimen/margin_horizontal_between_players"
        android:id="@+id/player5_slot"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:id="@+id/player5_team_slot"
            android:src="@drawable/team_backside"
            >
        </ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/player5_team_slot"
            android:id="@+id/player5_occu_slot"
            android:src="@drawable/occupation_backside"
            >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_toLeftOf="@id/player5_slot"
        android:id="@+id/player4_slot"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:id="@+id/player4_team_slot"
            android:src="@drawable/team_backside"
            >
        </ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/player4_team_slot"
            android:id="@+id/player4_occu_slot"
            android:src="@drawable/occupation_backside"
            >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@id/player5_slot"
        android:id="@+id/player6_slot"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:id="@+id/player6_team_slot"
            android:src="@drawable/team_backside"
            >
        </ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/player6_team_slot"
            android:id="@+id/player6_occu_slot"
            android:src="@drawable/occupation_backside"
            >
        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/margin_horizontal_between_players"
        android:layout_marginEnd="@dimen/margin_horizontal_between_players"
        android:layout_alignParentBottom="true"
        android:id="@+id/player1_slot"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:id="@+id/player1_team_slot"
            >
        </ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/player1_team_slot"
            android:id="@+id/player1_occu_slot"

            >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_toLeftOf="@id/player1_slot"
        android:id="@+id/player2_slot"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:id="@+id/player2_team_slot"
            android:src="@drawable/team_backside"
            >
        </ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/player2_team_slot"
            android:id="@+id/player2_occu_slot"
            android:src="@drawable/occupation_backside"
            >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@id/player1_slot"
        android:id="@+id/player8_slot"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:id="@+id/player8_team_slot"
            android:src="@drawable/team_backside"

            >
        </ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/player8_team_slot"
            android:id="@+id/player8_occu_slot"
            android:src="@drawable/occupation_backside"
            >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:id="@+id/player3_slot"

        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:id="@+id/player3_team_slot"
            android:src="@drawable/team_backside"
            >
        </ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/player3_team_slot"
            android:id="@+id/player3_occu_slot"
            android:src="@drawable/occupation_backside"
            >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_sp.atk"
        android:id="@+id/player7_slot"
        android:layout_alignParentRight="true"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:id="@+id/player7_team_slot"
            android:src="@drawable/team_backside"
            >
        </ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/player7_team_slot"
            android:id="@+id/player7_occu_slot"
            android:src="@drawable/occupation_backside"
            >
        </ImageView>
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abstain"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/btn_abstain"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_abstain"
        android:layout_alignParentRight="true"
        android:text="sp. def"
        android:id="@+id/btn_sp.def"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_sp.def"
        android:layout_alignParentRight="true"
        android:text="sp. atk"
        android:id="@+id/btn_sp.atk"
        />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:id="@+id/items_slot"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/item1_slot"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/item2_slot"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/item3_slot"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/item4_slot"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/item5_slot"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:background="@color/colorDialog"
        android:id="@+id/checked_items_dialog"
        android:visibility="invisible"
        >
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:id="@+id/checked_items_container"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/checked_item1_slot"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/checked_item2_slot"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/checked_item3_slot"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/checked_item4_slot"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/checked_item5_slot"/>
        </LinearLayout>
        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/checked_item_done"
            android:text="Ok"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:text="Choose one item that you want to take"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@color/colorDialog"
        android:id="@+id/checked_team_and_occu_dialog"
        android:visibility="invisible"
        >
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:id="@+id/checked_team_and_occu_container"
            >
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/checked_team_slot"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/checked_occu_slot"/>
        </LinearLayout>
        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/checked_team_and_occu_done"
            android:text="Ok"
            >
        </Button>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@color/colorDialog"
        android:id="@+id/list_actions_dialog"
        android:visibility="invisible"
        >
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:id="@+id/list_actions_container"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Choose one action for this turn"/>
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:id="@+id/btn_trade"
                android:text="Trade"/>
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:id="@+id/btn_war"
                android:text="War"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:id="@+id/btn_declare"
                android:text="Declare"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:id="@+id/btn_end"
                android:text="End turn"
                />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@color/colorDialog"
        android:id="@+id/won_list_actions_dialog"
        android:visibility="invisible"
        >
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:id="@+id/won_list_actions_container"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="You won this duel. Choose what to do with loser"/>

            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:id="@+id/btn_check_team_and_occu"
                android:textAllCaps="false"
                android:text="Check Team and Occupation"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:id="@+id/btn_check_items"
                android:textAllCaps="false"
                android:text="Check Items"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
