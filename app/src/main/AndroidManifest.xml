        </activity>
        <activity android:name=".GamePlayActivity" />
        <activity android:name=".HostWaitingActivity" />
        <activity android:name=".Server.ServerActivity" />
        <activity android:name=".Client.ClientActivity"></activity>
    </application>

</manifest>